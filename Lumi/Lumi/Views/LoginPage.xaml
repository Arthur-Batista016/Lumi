<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lumi.Views.LoginPage"
              Shell.NavBarIsVisible="False"
              BackgroundImageSource="background">
    <VerticalStackLayout>
        <Grid>
            <ImageButton Source="back.png" x:Name="voltar" Clicked="voltar_Clicked" HeightRequest="40" WidthRequest="100" CornerRadius="36" HorizontalOptions="Start" Margin="20,40,0,40"></ImageButton>
       
        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Image Grid.Row="0"  Source="icone.png" HorizontalOptions="Start" HeightRequest="200" BackgroundColor="Transparent"/>
                <Label Grid.Row="0" Text="Entre no Lumi " TextColor="#67a6d5" HorizontalOptions="Center" VerticalOptions="Center" Margin="30,30,0,0" FontSize="33" FontFamily="chuckFive"/>
        </Grid>
         
            
            <Grid  HeightRequest="420" WidthRequest="350" Margin="0,40,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,-30,0,0">

                <Label Text="E-mail" Margin="30,0,0,0" FontSize="20" FontFamily="chuckFive" TextColor="#a5a5a5"/>
                <Border StrokeShape="RoundRectangle 30" BackgroundColor="#e7e7e7" Margin="0,30,20,0" WidthRequest="300" HorizontalOptions="Center" HeightRequest="50">
                    <Entry Grid.Row="1" x:Name="emailText"  PlaceholderColor="#854F1271" Margin="10,0,0,0" FontAttributes="Bold" FontFamily="InterBold" HeightRequest="55"></Entry>
                </Border>



            </Grid>

            <Grid Grid.Row="1" Margin="0,30,0,0">
                <Label Text="Senha" Margin="30,0,0,0" FontSize="20" FontFamily="chuckFive" TextColor="#a5a5a5"/>
                <Border StrokeShape="RoundRectangle 30" BackgroundColor="#e7e7e7" Margin="0,30,20,0" WidthRequest="300" HorizontalOptions="Center" HeightRequest="50">
                    <Entry Grid.Row="1" x:Name="senhaText"  PlaceholderColor="#854F1271" Margin="10,0,0,0" FontAttributes="Bold" FontFamily="InterBold" HeightRequest="55"></Entry>
                </Border>
            </Grid>


            <Button Grid.Row="4" x:Name="entrar"
                    CornerRadius="30" Text="Entrar" Clicked="entrar_Clicked" Margin="0,0,0,0" BackgroundColor="#e7e7e7" TextColor="#67a6d5" HeightRequest="60" WidthRequest="290" FontSize="17" FontAttributes="Bold" FontFamily="InterBold" Command="{Binding RegistrarCommand}"></Button>
            <Button Grid.Row="5" Text="Esqueceu sua senha?" TextColor="Black" BackgroundColor="Transparent" HorizontalOptions="Center" VerticalOptions="End" Margin="0,120,0,0"/>

        </Grid>

       

    </VerticalStackLayout>
</ContentPage>