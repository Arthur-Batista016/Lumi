<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lumi.Views.HomePage"
              Shell.NavBarIsVisible="False"
              BackgroundColor="#FFFFFF"
             >
    <ScrollView>
        <VerticalStackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border  StrokeShape="RoundRectangle 10"  HeightRequest="100">
                <VerticalStackLayout Margin="0,10,0,0">
                        <Label Grid.Row="0" Text="Olá Bilinho" HorizontalOptions="Start" FontSize="23"  VerticalOptions="Center" Margin="20,30,0,0" TextColor="#67a6d5"/>
                    <ImageButton Grid.Row="0" x:Name="profile" Clicked="profile_Clicked" Source="profile" HeightRequest="50" HorizontalOptions="End" Margin="300,-40,0,0"/>
                </VerticalStackLayout>

            </Border>
        </Grid>

        <Grid Margin="0,30,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border  StrokeShape="RoundRectangle 10"  HeightRequest="100" WidthRequest="100">
                <VerticalStackLayout>
                    <Button Grid.Row="1" x:Name="disciplines" Clicked="disciplines_Clicked" Text="Disciplinas"  BackgroundColor="Transparent" TextColor="Black" WidthRequest="200"  FontFamily="chuckFive" Margin="0,50,0,0"/>
                    <Image Grid.Row="0" Source="book" HeightRequest="70" VerticalOptions="Start" Margin="0,-100,0,0"/>
                </VerticalStackLayout>
                </Border>
        </Grid>

        <Grid Margin="0,50,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
            
            <Label Grid.Row="0" Text="Tabela de Precos" FontSize="30" Margin="10,0,0,0" FontFamily="chuckFive"/>
         
                    <Label Grid.Row="1" Text="Português" FontSize="Large" Margin="20,30,0,0"/>
                    <Label Grid.Row="1" Text="40/h" HorizontalOptions="End" FontSize="Large" Margin="0,40,60,0"  FontFamily="chuckFive"/>

                    <Label Grid.Row="2"  Text="Matematica" FontSize="Large" Margin="20,30,0,0"/>
                    <Label Grid.Row="2"  Text="50/h" HorizontalOptions="End" FontSize="Large" Margin="0,35,60,0"  FontFamily="chuckFive"/>


                    <Label Grid.Row="3" Text="Inglês"  FontSize="Large" Margin="20,30,0,0"/>
                <Label  Grid.Row="3" Text="40/h"  HorizontalOptions="End" FontSize="Large" Margin="0,40,60,0"  FontFamily="chuckFive"/>


                    <Label Grid.Row="4" Text="Química" FontSize="Large" Margin="20,30,0,0"/>
                <Label  Grid.Row="4" Text="50/h" HorizontalOptions="End" FontSize="Large" Margin="0,35,60,0" FontFamily="chuckFive"/>

                    <Label  Grid.Row="5" Text="Geografia" FontSize="Large" Margin="20,30,0,0"/>
                <Label  Grid.Row="5" Text="40/h" HorizontalOptions="End" FontSize="Large" Margin="0,35,60,0"  FontFamily="chuckFive"/>
              
        </Grid>

        <Grid Margin="0,80,0,0">
                <Label Text="Sobre Nos" TextColor="Black" FontSize="Large" Margin="10,20,0,0" FontFamily="chuckFive"/>
                <Border StrokeShape="RoundRectangle 0" Margin="0,70,0,0" HeightRequest="400" BackgroundColor="#bfecff" WidthRequest="450">
                    <VerticalStackLayout Margin="0,-40,0,0">
                        <Image Source="logo" HeightRequest="300"/>
                        <Label Text="Descubra mais sobre nosssa empresa, nossas missoes, valores, Clique no botao abaixo para mais detalhes" WidthRequest="350" FontFamily="chuckFive" VerticalOptions="Center" Margin="0,-50,0,0"  HorizontalOptions="Center"/>
                        <Button Text="Mais detalhes" x:Name="more" Clicked="more_Clicked" WidthRequest="200" Margin="0,30,0,0" BackgroundColor="#e7e7e7" TextColor="Black" FontFamily="chuckFive"/>
                </VerticalStackLayout>
            </Border>
        </Grid>




    
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>